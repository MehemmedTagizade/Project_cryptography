                            <span class="icon-bar"></span>
                        </button>
                        <a style="font-size: 40px; color:white; margin-top: 30px;" class="navbar-brand" href="~/#">
                            MD5
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a class="page-scroll" asp-controller="Home" asp-action="Index">Əsas Səhifə</a>
                            </li>
                            <li>
                                <a class="page-scroll" asp-controller="Home" asp-action="md5">MD-5</a>
                            </li>
                            <li>
                                <a class="page-scroll" asp-controller="Home" asp-action="ceaser">Sezar</a>
                            </li>
                            <li>
                                <a class="page-scroll" asp-controller="Home" asp-action="reverse">Tərs mətn</a>
                            </li>
                            <li>
                                <a class="page-scroll" asp-controller="Home" asp-action="base64">Base-64</a>
                            </li>


                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
