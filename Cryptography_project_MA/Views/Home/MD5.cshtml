</head>

<body style="background: url(../assets/img/bg.jpeg) repeat fixed center 0 / cover; ">
    <!-- =============== Preloader =============== -->
    <div class="full">

        <!-- =============== nav =============== -->
        <nav id="mainNav" class="navbar navbar-default navbar-fixed-top nvbarRv">
            <div class="container">
                <div class="container-fluid">
